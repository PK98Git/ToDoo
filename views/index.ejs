<%- include('./partials/header.ejs') %>
<div class="mybody"></div>
<div class="container position-absolute top-50 start-50 translate-middle box">

<div class="container ">
	<div class="row justify-content-md-center ">
		<div class="col-4">
			<h1 class="mytext" >Task List</h1>
			<ul class="list-group ">
				<% if(locals.tasklist){ %>
					<% for(let i=0;i<locals.tasklist.length;i++){ %>
						<li class="list-group-item">
							<input class="form-check-input mt-0" type="checkbox" onclick="handleCheckboxClick(<%= i %>)">
							<p class="my">
								<%=tasklist[i] %>
							</p>
						</li>
						<% } %>
							<% } %>
			</ul>
			<form action="/" method="POST">
				<div class="mb-3">
					<label for="Input" class="form-label">Task Name</label>
					<input type="text" class="form-control" name="task" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>



</div>
	<script>
		function handleCheckboxClick(index) {
			var component = document.querySelectorAll(".list-group li")[index];

			if (component.style.textDecoration === "line-through") {
				component.style.textDecoration = "none";
			} else {
				component.style.textDecoration = "line-through";
			}

		}
	</script>

