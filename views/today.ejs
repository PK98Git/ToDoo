<%- include('./partials/header.ejs') %>
	<div class="mybody"></div>
	<div class="container position-absolute top-50 start-50 translate-middle">
		<div class="container ">
			<div class="row justify-content-md-center ">
				<div class="col-4">
					<h1 class="mytext"><%=date %></h1>
					<ul class="list-group ">
						<% if(locals.tasklist2){ %>
							<% for(let i=0;i<tasklist2.length;i++){ %>
								<li class="list-group-item ">
									<input class="form-check-input me-3" type="checkbox"
										onclick="handleCheckboxClick(<%= i %>)">
									<p class="my">
										<%=tasklist2[i] %>
									</p>
								</li>
								<% } %>
									<% } %>
					</ul>


					<form action="/today" method="POST">
						<div class="mb-3">
							<label for="Input" class="form-label">Task Name</label>
							<input type="text" class="form-control" name="task" required>
						</div>
						<button type="submit" class="btn btn-primary">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script>
		function handleCheckboxClick(index) {
			var component = document.querySelectorAll(".list-group li")[index];

			if (component.style.textDecoration === "line-through") {
				component.style.textDecoration = "none";
			} else {
				component.style.textDecoration = "line-through";
			}

		}
	</script>

	<% src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" %>
